<UserControl x:Class="Contatos.Controles.ContatoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contatos.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock Text="Nome Sobrenome" x:Name="NameTb" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="email@dominio.com.br" x:Name="EmailTb" 
                       FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock Text="(12) 34567-8900" x:Name="TelTb" 
                       FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
