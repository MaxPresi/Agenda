<Window x:Class="Contatos.NovoContato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contatos"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="NovoContato" Height="182" Width="200">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nome:"/>
            <TextBox x:Name="NomeTb" Margin="0,0,0,5"/>
            <TextBlock Text="E-mail:"/>
            <TextBox x:Name="EmailTb" Margin="0,0,0,5"/>
            <TextBlock Text="Tel.:"/>
            <TextBox x:Name="TelTb" Margin="0,0,0,5"/>
            <Button Content="Salvar" Click="Salvar_Click"
                    Margin="0,0,0,5"/>
            <Button Content="Cancelar" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
